<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PulsarUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:PulsarUI"
        xmlns:unicode="clr-namespace:Avalonia.Media.TextFormatting.Unicode;assembly=Avalonia.Visuals"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
        x:Class="PulsarUI.Views.RunSetupWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Run Setup"
        Background="#252525">
        
        <Grid ColumnDefinitions="*,2*">
                <StackPanel Grid.Column="0" Orientation="Vertical" Background="Yellow">
                        <Button Content="F1 - Return" Margin="10" Padding="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Lime"/>
                        <Grid Margin="10" ColumnDefinitions="*,*" RowDefinitions="*,*,*" Background="Lime">
                                <Label Grid.Row="0" Grid.Column="0" Content="F2 - Run Mode" />
                                <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch">
                                        <ComboBoxItem Content="Qualifying" />
                                        <ComboBoxItem Content="Eliminations" />
                                        <ComboBoxItem Content="Q &amp; E Combo" />
                                        <ComboBoxItem Content="Practice" />
                                        <ComboBoxItem Content="Exhibition" />
                                </ComboBox>
                                <Label Grid.Row="2" Grid.Column="0" Content="Go To Round:"
                                       HorizontalAlignment="Stretch" />
                                <ButtonSpinner Grid.Row="2" Grid.Column="1" Content="88" HorizontalAlignment="Stretch" />
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="Last Round: Qualifying 87" />
                        </Grid>
                        <Grid Margin="10" ColumnDefinitions="*,*" Background="Lime">
                                <Label Grid.Row="0" Grid.Column="0" Content="F3 - Left Tree" />
                                <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch">
                                        <ComboBoxItem Content=".4 Pro" />
                                        <ComboBoxItem Content=".5 Pro" />
                                        <ComboBoxItem Content=".5 Full" />
                                        <ComboBoxItem Content="Delay" />
                                        <ComboBoxItem Content="Crossover" />
                                </ComboBox>
                        </Grid>
                        <Grid Margin="10" ColumnDefinitions="*,*" Background="Lime">
                                <Label Grid.Row="0" Grid.Column="0" Content="F4 - Right Tree" />
                                <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch">
                                        <ComboBoxItem Content=".4 Pro" />
                                        <ComboBoxItem Content=".5 Pro" />
                                        <ComboBoxItem Content=".5 Full" />
                                        <ComboBoxItem Content="Delay" />
                                        <ComboBoxItem Content="Crossover" />
                                </ComboBox>
                        </Grid>
                        <Grid Margin="10" ColumnDefinitions="*,*" Background="Lime">
                                <Label Grid.Row="0" Grid.Column="0" Content="F5 - Finish Line" />
                                <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch">
                                        <ComboBoxItem Content="18.288m" />
                                        <ComboBoxItem Content="100.584m" />
                                        <ComboBoxItem Content="201.168m" />
                                        <ComboBoxItem Content="304.800m" />
                                        <ComboBoxItem Content="402.336m" />
                                </ComboBox>
                        </Grid>
                        <Button Content="F6 - Advanced Options" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Lime"/>
                        <Grid Margin="10" ColumnDefinitions="*,*" Background="Lime">
                                <Label Grid.Column="0" Content="F10 - Select Category"/>
                                <TextBox Grid.Column="1" Watermark="88" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        </Grid>
                </StackPanel>
                <ScrollViewer Grid.Column="1">
                        <Grid ColumnDefinitions="*,*" RowDefinitions="60,60,60,60,60,60,60,60,60,60,60,60,60,60,60,60,60,60,60,60,60,60,60,60" ScrollViewer.VerticalScrollBarVisibility="Visible" Background="Blue">
                                <controls:CategoryButton Grid.Row="0" Grid.Column="0" CBCategName="01 - Category One" />

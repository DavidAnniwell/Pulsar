                                <controls:CategoryButton Grid.Row="12" Grid.Column="1" CBCategName="26 - Category Twenty Six" />
                                <controls:CategoryButton Grid.Row="13" Grid.Column="0" CBCategName="27 - Category Twenty Seven" />
